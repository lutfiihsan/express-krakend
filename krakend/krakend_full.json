{
	"version": 2,
	"name": "Express API Gateway Production",
	"max_idle_connections": 200,
	"extra_config": {
		"github_com/devopsfaith/krakend-cors": {
			"allow-origins": ["*"],
			"allow_headers": ["*"],
			"allow-methods": ["GET", "POST", "DELETE", "PUT"],
			"expose_headers": [
				"Accept-Encoding",
				"Accept-Language",
				"access-control-allow-origin",
				"Access-Control-Request-Headers",
				"Access-Control-Request-Method",
				"Authorization",
				"Cache-Control",
				"Connection",
				"Content-Type",
				"Host",
				"If-Modified-Since",
				"Keep-Alive",
				"Key",
				"Origin",
				"Pragma",
				"User-Agent",
				"X-Custom-Header"
			],
			"allow_credentials": true,
			"max-age": "24h"
		},
		"github.com/devopsfaith/krakend-circuitbreaker/gobreaker": {
			"interval": 30,
			"timeout": 15,
			"maxErrors": 1,
			"name": "microservice-breaker",
			"logStatusChange": true
		},
		"github_com/devopsfaith/krakend-logstash": {
			"enabled": true
		},
		"github_com/devopsfaith/krakend-gologging": {
			"level": "DEBUG",
			"prefix": "[KRAKEND_LOGGING]",
			"syslog": false,
			"stdout": true
		},
		"github.com/devopsfaith/krakend/proxy": {
			"sequential": true
		}
	},
	"endpoints": [
		{
			"@comment": "login authentication",
			"endpoint": "/login",
			"method": "POST",
			"concurrent_calls": 1,
			"headers_to_pass": [
				"Accept-Encoding",
				"Accept-Language",
				"access-control-allow-origin",
				"Access-Control-Request-Headers",
				"Access-Control-Request-Method",
				"Authorization",
				"Cache-Control",
				"Connection",
				"Content-Type",
				"Host",
				"If-Modified-Since",
				"Keep-Alive",
				"Key",
				"Origin",
				"Pragma",
				"User-Agent",
				"X-Custom-Header"
			],
			"output_encoding": "no-op",
			"cache_ttl": "3600ms",
			"timeout": "7200ms",
			"backend": [
				{
					"host": ["http://book-service:3000"],
					"method": "POST",
					"url_pattern": "/api/v1/auth/login",
					"encoding": "no-op",
					"is_collection": false,
					"disable_host_sanitize": false,
					"timeout": "14400ms",
					"extra_config": {
						"github.com/devopsfaith/krakend-jsonschema": {
							"type": "object",
							"properties": {
								"status": {
									"type": "string"
								},
								"code": {
									"type": "integer"
								},
								"method": {
									"type": "string"
								},
								"message": {
									"type": "string"
								},
								"accessToken": {
									"type": "string"
								}
							},
							"required": ["status", "code", "method", "message"]
						}
					}
				}
			],
			"extra_config": {
				"github.com/devopsfaith/krakend-jsonschema": {
					"type": "object",
					"properties": {
						"email": {
							"type": "string",
							"format": "email"
						},
						"pasword": {
							"type": "string",
							"format": "password"
						}
					},
					"required": ["email", "password"]
				}
			}
		},
